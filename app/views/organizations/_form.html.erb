<%= simple_form_for(@organization) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :website %>
    <%= f.input :phone %>
    <%= f.input :address %>
    <%= f.input :city %>
    <%= f.input :state %>
    <%= f.input :zipcode %>
    <%= f.input :description %>
    <%= f.input :volunteers %>
    <%= f.input :donations %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
