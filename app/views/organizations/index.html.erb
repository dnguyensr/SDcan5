<p id="notice"><%= notice %></p>

<h1>Organizations</h1>

<% @organizations.each do |organization| %>
      <div class="row">
        <div class="col s12 m6">
          <div class="card blue-grey darken-1">
            <div class="card-content white-text">
              <span class="card-title"><%= organization.name%></span>
              <p><%= organization.description%></p>
              <p>Focus: </p>
            </div>
            <div class="card-action">
              <a href="/organizations/<%= organization.id %>">More info</a>
              <a href="<%= organization.website %>">Website</a>
              <a href="http://www.habitatoc.org/Volunteer">Volunteer</a>
              <a href="http://www.habitatoc.org/Donate">Donate</a>
            </div>
          </div>
        </div>
      </div>
      <% end %>

<% if current_user %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Website</th>
      <th>Phone</th>
      <th>Address</th>
      <th>City</th>
      <th>State</th>
      <th>Zipcode</th>
      <th>Description</th>
      <th>Volunteers</th>
      <th>Donations</th>
      <th colspan="3"></th>
    </tr>
  </thead>

<h1>Temp org index</h1>
  <tbody>
    <% @organizations.each do |organization| %>
